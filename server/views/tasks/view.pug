extends ../layouts/application.pug

block content
    .card-header.bg-secondary.text-white
        h2= task.name
    .card-body.bg-light
        p= task.description
        hr
        .container
            .row.p-1
                .col= t('views.tasks.view.author')
                .col= task.creator.fullName
            .row.p-1
                .col= t('views.tasks.view.executor')
                .col= task.executor ? task.executor.fullName : t('views.tasks.new.nonExecutor')
            .row.p-1
                .col= t('views.tasks.view.status')
                .col= task.status.name
            .row.p-1
                .col= t('views.tasks.view.createAt')
                .col= formatDate(task.createdAt)
            .row.p-1
                .col
                    a(class='btn-link btn' href=route('editTask', { id: task.id }))= t('views.manage.edit')
                    +buttonTo(route('deleteTask', { id: task.id }), 'delete')(class='btn-link btn' value=t('views.manage.delete'))
