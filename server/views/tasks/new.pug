extends ../layouts/application.pug

block header
    div.text-center
        = t('views.tasks.new.title')
block content
    div.w-50.mx-auto
        +formFor()(action=route('createTask') method='post')
            .d-none
                +input(task, 'creatorId', errors, currentUserId)(type='hidden')
            +input(task, 'name', errors)(type='text', required)
            +textarea(task, 'description')
            +select(task, 'statusId', statuses, 'id', 'name', errors)
            +select(task, 'executorId', users, 'id', 'fullName', t('views.tasks.new.nonExecutor'), errors)
            +submit(t('views.tasks.new.create'))
