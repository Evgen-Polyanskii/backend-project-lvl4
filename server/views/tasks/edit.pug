extends ../layouts/application.pug

block header
    div.text-center
        = t('views.tasks.edit.title')
block content
    div.w-50.mx-auto
        +formFor()(action=route('updateTask', { id: task.id }) method='post')
            .d-none
                +input(task, 'creatorId', errors)(type='hidden')
            +input(task, 'name', errors)(type='text', required)
            +textarea(task, 'description')
            +select(task, 'statusId', statuses, 'id', 'name', errors)
            +select(task, 'executorId', users, 'id', 'fullName', t('views.tasks.new.nonExecutor'), errors)
            input(name='_method' type='hidden' value='patch')
            input.btn.btn-primary(type='submit' value=t('views.tasks.edit.save'))
