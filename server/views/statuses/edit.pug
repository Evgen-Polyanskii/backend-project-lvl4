extends ../layouts/application.pug

block header
    = t('views.statuses.edit.title')

block content
    +formFor()(action=route('statuses/update', { id: status.id }) method='post')
        +input(status, 'name', errors)(type="text")
        input(name='_method' type='hidden' value='patch')
        input.btn.btn-primary(type='submit' value=t('views.statuses.edit.save'))

